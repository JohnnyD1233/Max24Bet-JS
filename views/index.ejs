<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Max24Bet</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.7.2/jquery.flexslider-min.js"></script>
    <script src="/js/flex-slider.js"></script>
  </head>
  <body>
    <header>
      <!-- phones and pc menus -->
      <%- include("header.ejs") %>
    </header>

    <div class="top-section clearfix">
      <!-- banners -->
      <%- include("flex-slider.ejs") %>
      <!-- all the liga from the API -->
      <%- include("liga.ejs") %>
      <!-- pc extended sports menu and bet slip -->
      <div class="side_block"><%- include("side-menu-old.ejs") %></div>
    </div>
    <%- include("footer.ejs") %>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        function toggleTextVisibility() {
          var elements = document.querySelectorAll(
            ".show-selected-leagues-ttl"
          );
          elements.forEach(function (el) {
            if (
              window.innerWidth < 950 &&
              el.textContent.includes("הצג ליגות שנבחרו")
            ) {
              el.style.display = "none";
            } else {
              el.style.display = "block"; // Or any other display value you want to reset
            }
          });
        }

        toggleTextVisibility();

        window.addEventListener("resize", function () {
          toggleTextVisibility();
        });
      });
    </script>
  </body>
</html>
